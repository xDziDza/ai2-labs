{% extends 'base.html.twig' %}

{% block title %}Hello ExternalAPIController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


    <h1>Weather Forecast</h1>
    {{form_start(form) }}
    {{form_widget(form) }}
    <button class="btn">Submit</button>
    {{form_end(form) }}
    {% if weather_data %}
        <h2>Data from Open Meteo</h2>
        <table>
            <thead>
            <tr>
                <th>Date</th>
                <th>Max Temperature (°C)
                <th>Min Temperature (°C)</th>
                <th>Precipitation (mm)</th>
            </tr>
            </thead>
            <tbody>
            {% for i in 0..weather_data.daily.time|length-1 %}
                <tr>
                    <td>{{ weather_data.daily.time[i] }}</td>
                    <td>{{ weather_data.daily.temperature_2m_max[i] }}</td>
                    <td>{{ weather_data.daily.temperature_2m_min[i] }}</td>
                    <td>{{ weather_data.daily.precipitation_sum[i] }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
